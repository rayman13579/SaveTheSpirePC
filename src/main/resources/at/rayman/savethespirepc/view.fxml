<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="200.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.rayman.savethespirepc.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label fx:id="title" text="Slay the Spire Cloud Save">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <Button onAction="#onUploadSaveClick" prefWidth="150.0" text="Upload Save"/>
    <Button onAction="#onDownloadSaveClick" prefWidth="150.0" text="Download Save"/>
    <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0"/>

    <TextArea fx:id="errors" prefHeight="100.0" prefWidth="200.0" text="No Errors :D">
        <font>
            <Font size="10.0"/>
        </font>
    </TextArea>
</VBox>
